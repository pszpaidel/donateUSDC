{
  "compilerOptions": {
    "target": "ESNext", // ESNext enables modern ES Modules features
    "module": "ESNext", // Use ES Modules
    "moduleResolution": "Node", // Resolve modules like Node.js
    "jsx": "react-jsx", // Use the JSX transform for React 17+
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // For module interop between ES Modules and CommonJS
    "skipLibCheck": true, // Skip type checking of libraries
    "allowSyntheticDefaultImports": true, // Allows for cleaner imports
    },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}